{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".test-dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2019",
    "jsx": "react-jsx",
    "declaration": false,
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/utils/env": ["tests/stubs/utils-env"],
      "@/lib/providers": ["lib/providers"],
      "@/lib/sort": ["lib/sort"],
      "next/navigation": ["tests/stubs/next-navigation"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "lib/**/*.ts",
    "utils/**/*.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "tests/**/*.test.ts"
  ],
  "exclude": ["node_modules", ".next", ".test-dist"]
}
